{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false,
    "reload": false
  },
  "security": {
    "secret_key": "CHANGE_THIS_IN_PRODUCTION_TO_RANDOM_64_CHAR_STRING",
    "allowed_origins": [
      "https://YOUR_DOMAIN_HERE",
      "https://www.YOUR_DOMAIN_HERE",
      "https://YOUR_IP_ADDRESS",
      "https://localhost:8000"
    ],
    "csrf_protection": {
      "enabled": false,
      "token_expiry_hours": 1
    },
    "jwt": {
      "access_token_expire_minutes": 60,
      "refresh_token_expire_days": 7,
      "algorithm": "HS256"
    },
    "rate_limiting": {
      "enabled": true,
      "auth_requests_per_minute": 10,
      "api_requests_per_minute": 60,
      "static_requests_per_minute": 120,
      "max_strikes": 5,
      "ban_duration_minutes": 60
    },
    "anti_bot": {
      "enabled": true,
      "strict_user_agent_check": true,
      "block_automation_tools": true,
      "require_browser_headers": true
    },
    "device_fingerprinting": {
      "enabled": true,
      "strict_validation": false
    }
  },
  "features": {
    "user_registration": true,
    "team_creation": true,
    "team_joining": true,
    "meeting_creation": true,
    "meeting_joining": true,
    "file_upload": true,
    "chat_functionality": true,
    "secret_id_retrieval": true,
    "account_deletion": true,
    "admin_management": true,
    "health_endpoint": true,
    "metrics_endpoint": false
  },
  "validation": {
    "password_min_length": 8,
    "password_max_length": 128,
    "username_min_length": 3,
    "username_max_length": 50,
    "team_name_max_length": 100,
    "meeting_name_max_length": 100,
    "message_max_length": 1000
  },
  "file_upload": {
    "enabled": true,
    "max_file_size_mb": 25,
    "allowed_extensions": [
      ".jpg", ".jpeg", ".png", ".gif", ".webp",
      ".pdf", ".doc", ".docx", ".txt", ".md",
      ".mp3", ".mp4", ".wav", ".avi", ".mov"
    ],
    "upload_directory": "/app/uploads",
    "scan_files": false
  },
  "database": {
    "path": "/app/data/meeting_app.db",
    "backup_enabled": true,
    "backup_interval_hours": 6,
    "auto_vacuum": true
  },
  "logging": {
    "level": "INFO",
    "enable_file_logging": true,
    "log_directory": "/app/logs",
    "max_log_file_size_mb": 100,
    "backup_count": 10,
    "log_security_events": true,
    "log_api_requests": true
  },
  "websocket": {
    "enabled": true,
    "max_connections_per_room": 100,
    "connection_timeout_seconds": 600,
    "heartbeat_interval_seconds": 30
  },
  "session": {
    "auto_logout_inactive_minutes": 2880,
    "remember_device_days": 30,
    "max_concurrent_sessions": 10
  },
  "ui": {
    "show_public_ids": true,
    "enable_dark_mode": true,
    "show_user_count": true,
    "enable_notifications": true,
    "auto_refresh_interval_seconds": 30
  },
  "admin": {
    "require_admin_approval_for_teams": false,
    "require_admin_approval_for_meetings": false,
    "enable_user_statistics": true
  },
  "performance": {
    "enable_caching": true,
    "cache_expiry_minutes": 30,
    "enable_compression": true,
    "max_request_size_mb": 100
  }
}